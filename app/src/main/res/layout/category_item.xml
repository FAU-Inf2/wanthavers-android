<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="category"
            type="de.fau.cs.mad.wanthavers.common.Category"/>

        <variable
            name="actionHandler"
            type="wanthavers.mad.cs.fau.de.wanthavers_android.filtersetting.FilterSettingActionHandler"/>

    </data>

    <RelativeLayout
        android:id="@+id/category_item"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/colorSecondary"
        android:layout_marginTop="1dp">

        <ImageView
            android:id="@+id/image_category"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@android:drawable/sym_def_app_icon"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center"
            android:text="@{category.getName()}"
            android:layout_toRightOf="@+id/image_category"
            android:layout_toEndOf="@+id/image_category"/>

    </RelativeLayout>

</layout>