<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="presenter"
            type="wanthavers.mad.cs.fau.de.wanthavers_android.filtersetting.FilterSettingContract.Presenter" />

        <variable
            name="actionHandler"
            type="wanthavers.mad.cs.fau.de.wanthavers_android.filtersetting.FilterSettingActionHandler"/>

        <variable
            name="location"
            type="de.fau.cs.mad.wanthavers.common.Location" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:weightSum="1">

            <wanthavers.mad.cs.fau.de.wanthavers_android.util.WantHaversTextView
                android:id="@+id/filter_setting_category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/category_title"
                android:textColor="@color/colorMainTextDark"/>

            <wanthavers.mad.cs.fau.de.wanthavers_android.filtersetting.InstantAutoComplete
                android:id="@+id/spinner_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/filter_setting_category_title"
                android:hint="@string/all_categories"
                android:dropDownWidth="match_parent"
                android:inputType="textAutoComplete"/>

            <wanthavers.mad.cs.fau.de.wanthavers_android.util.WantHaversTextView
                android:id="@+id/filter_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/create_desire_price_header"
                android:textColor="@color/colorMainTextDark"
                android:layout_below="@id/spinner_category"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/price_category_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/filter_price_title">

                <FrameLayout
                    android:id="@+id/button_small_price_border"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_weight=".3">
                    <Button
                        android:id="@+id/button_small_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/small_price"
                        android:textColor="@color/colorSecondary"
                        android:background="@color/colorPrimary"
                        android:onClick="@{() -> actionHandler.buttonChangeColor(1)}"/>
                </FrameLayout>

                <wanthavers.mad.cs.fau.de.wanthavers_android.util.WantHaversTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05" />

                <FrameLayout
                    android:id="@+id/button_medium_price_border"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_weight=".3">
                    <Button
                        android:id="@+id/button_medium_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/medium_price"
                        android:textColor="@color/colorSecondary"
                        android:background="@color/colorPrimary"
                        android:onClick="@{() -> actionHandler.buttonChangeColor(2)}"/>
                </FrameLayout>

                <wanthavers.mad.cs.fau.de.wanthavers_android.util.WantHaversTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05" />

                <FrameLayout
                    android:id="@+id/button_large_price_border"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_weight=".3">
                    <Button
                        android:id="@+id/button_large_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/large_price"
                        android:textColor="@color/colorSecondary"
                        android:background="@color/colorPrimary"
                        android:onClick="@{() -> actionHandler.buttonChangeColor(3)}"/>
                </FrameLayout>
            </LinearLayout>

            <wanthavers.mad.cs.fau.de.wanthavers_android.util.WantHaversTextView
                android:id="@+id/filter_min_reward_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/minimal_reward_title"
                android:textColor="@color/colorMainTextDark"
                android:layout_below="@id/price_category_buttons"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/filter_min_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:maxLength="6"
                android:layout_below="@+id/filter_min_reward_title"/>

            <wanthavers.mad.cs.fau.de.wanthavers_android.util.WantHaversTextView
                android:id="@+id/filter_min_rating_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/minimal_rating_title"
                android:textColor="@color/colorMainTextDark"
                android:layout_below="@id/filter_min_reward"/>

            <LinearLayout
                android:id="@+id/ratingbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:layout_below="@+id/filter_min_rating_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <RatingBar
                    android:id="@+id/filterSettingRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:max="5"
                    android:maxHeight="50dp"
                    android:minHeight="28dp"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="1.0" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/filter_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingbar_layout">

                <wanthavers.mad.cs.fau.de.wanthavers_android.util.WantHaversTextView
                    android:id="@+id/filter_location_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/location_title"
                    android:textColor="@color/colorMainTextDark"
                    android:layout_centerVertical="true"/>

                <wanthavers.mad.cs.fau.de.wanthavers_android.util.WantHaversTextButton
                    android:id="@+id/button_change_location"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/change_button"
                    android:padding="5dp"
                    android:background="@drawable/border_scondary_nocorner"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:onClick="@{() -> actionHandler.buttonChangeLocation()}"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/selected_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/filter_location">

                <wanthavers.mad.cs.fau.de.wanthavers_android.util.WantHaversTextView
                    android:id="@+id/no_location_selected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_location_selected"/>

                <wanthavers.mad.cs.fau.de.wanthavers_android.util.WantHaversTextView
                    android:id="@+id/selected_custom_location_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@{location.getDescription()}"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorMainTextDark"
                    android:visibility="gone"/>

                <wanthavers.mad.cs.fau.de.wanthavers_android.util.WantHaversTextView
                    android:id="@+id/selected_location_string"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@{location.getFullAddress()}"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/selected_custom_location_name"
                    android:textColor="@color/colorMainTextDark"
                    android:visibility="gone"/>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/select_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/selected_location"
                android:visibility="gone">

                <wanthavers.mad.cs.fau.de.wanthavers_android.util.WantHaversTextView
                    android:id="@+id/filter_radius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/filter_radius_title"
                    android:textColor="@color/colorMainTextDark"
                    android:layout_marginTop="15dp"/>

                <Spinner
                    android:id="@+id/spinner_radius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:layout_alignBottom="@+id/filter_radius"
                    android:layout_alignTop="@+id/filter_radius"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>


            <wanthavers.mad.cs.fau.de.wanthavers_android.util.WantHaversTextButton
                android:id="@+id/button_apply_filter"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/border_scondary_nocorner"
                android:text="@string/button_apply_filter"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/select_radius"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:onClick="@{() -> presenter.setFilterWithInput(location)}"/>

            <wanthavers.mad.cs.fau.de.wanthavers_android.util.WantHaversTextButton
                android:id="@+id/button_reset_filter"
                android:background="@drawable/border_scondary_nocorner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/button_reset_filter"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/button_apply_filter"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:onClick="@{() -> presenter.resetFilter()}"/>

        </RelativeLayout>
    </ScrollView>

</layout>