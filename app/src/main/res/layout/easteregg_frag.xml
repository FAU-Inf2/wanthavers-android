<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable
            name="presenter"
            type="wanthavers.mad.cs.fau.de.wanthavers_android.eastereggone.EasterEggContract.Presenter" />

    </data>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:background="@color/layout_Background1"
            android:focusableInTouchMode="true">

            <ViewAnimator
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/viewAnimator" >

                <ImageView
                    android:id="@+id/easter_egg_wh_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo"
                    android:layout_gravity="center"/>


                <ImageView
                    android:id="@+id/easter_egg_happy_smiley"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/wh_happy_smiley_primary"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/easter_egg_sad_smiley"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/wh_sad_smiley_primary"
                    android:layout_gravity="center"
                    android:visibility="gone"/>


            </ViewAnimator>

        </RelativeLayout>
</layout>

