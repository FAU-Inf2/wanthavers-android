<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="chats"
            type="wanthavers.mad.cs.fau.de.wanthavers_android.chatlist.ChatListViewModel" />

        <variable
            name="user"
            type="de.fau.cs.mad.wanthavers.common.User" />

        <variable
            name="actionHandler"
            type="wanthavers.mad.cs.fau.de.wanthavers_android.chatlist.ChatListItemActionHandler" />

        <variable
            name="chat"
            type="de.fau.cs.mad.wanthavers.common.Chat" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorSecondary"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/list_item_padding"
        android:paddingTop="@dimen/list_item_padding"
        android:orientation="horizontal"
        android:onClick="@{() -> actionHandler.chatClicked(chat)}">

        <ImageView
            android:id="@+id/ivProfileOther"
            android:contentDescription="@string/profile_other"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:textSize="18sp"
            android:id="@+id/userName"
            android:padding="20dp"
            android:lines="3"
            android:text="@{user.name}"
            android:layout_marginEnd="64dp"
            android:layout_width="match_parent"

            android:layout_height="64dp">
        </TextView>

    </LinearLayout>
</layout>