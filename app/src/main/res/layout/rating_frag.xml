<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    
    <data>
        
        <variable
            name="desire"
            type="de.fau.cs.mad.wanthavers.common.Desire" />

        <variable
            name="desirelogic"
            type="wanthavers.mad.cs.fau.de.wanthavers_android.domain.DesireLogic" />
        
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:background="@color/colorSecondary">

            <TextView
                android:id="@+id/transaction_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMainTextDark"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center"
                android:text="YOUR TRANSACTION"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:id="@+id/desire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/desire_time_stamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="center"
                    android:text="20 MARCH 2014 20:27"/>

                <ImageView
                    android:id="@+id/image_desire"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:layout_below="@id/desire_time_stamp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/desire_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorMainTextDark"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="center"
                    android:text="KASTEN BIER"
                    android:layout_below="@id/image_desire"/>

                <RelativeLayout
                    android:id="@+id/prices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/desire_title">

                    <TextView
                        android:id="@+id/price_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Price: "/>

                    <TextView
                        android:id="@+id/desire_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_toRightOf="@id/price_subtitle"
                        android:text="500$"/>

                    <TextView
                        android:id="@+id/reward_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_toRightOf="@id/desire_price"
                        android:text=" Reward: "/>

                    <TextView
                        android:id="@+id/desire_reward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_toRightOf="@id/reward_subtitle"
                        android:text="500$"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/transaction_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/desire"
                android:layout_marginTop="20dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <RelativeLayout
                    android:id="@+id/transaction_summary_title_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorMainTextDark"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/transaction_summary_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="  TRANSACTION SUMMARY  "
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:textColor="@color/colorMainTextDark"
                        android:background="@color/colorSecondary"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/transaction_summary_pictures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/transaction_summary_title_bar">

                    <ImageView
                        android:id="@+id/image_category"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@android:drawable/sym_def_app_icon"
                        android:layout_weight="0.3"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05" />

                    <ImageView
                        android:id="@+id/image_haver_or_wanter"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@android:drawable/sym_def_app_icon"
                        android:layout_weight="0.3"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05" />

                    <ImageView
                        android:id="@+id/image_location"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@android:drawable/sym_def_app_icon"
                        android:layout_weight="0.3"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_below="@id/transaction_summary"
                android:background="@color/light_grey"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/rating_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorMainTextDark"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center"
                    android:text="LEAVE YOUR RATING"
                    android:layout_marginTop="20dp" />

                <LinearLayout
                    android:id="@+id/ratingbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/rating_title"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp">

                    <RatingBar
                        android:id="@+id/RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:max="5"
                        android:maxHeight="50dp"
                        android:minHeight="28dp"
                        android:numStars="5"
                        android:rating="0"
                        android:stepSize="1.0" />

                </LinearLayout>

                <Button
                    android:id="@+id/button_submit_rating"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="SUBMIT"
                    android:layout_below="@id/ratingbar_layout"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorMainText"
                    android:layout_marginTop="20dp">
                </Button>

            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>

</layout>