                        android:onClick="@{() -> actionHandler.changeFilterClicked()}"/>

                    <wanthavers.mad.cs.fau.de.wanthavers_android.util.WantHaversTextView
                        android:id="@+id/placeholder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
